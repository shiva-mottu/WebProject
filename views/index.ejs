    <style>
        .boxStyles {
            box-shadow: rgba(51, 48, 51, 0.73) -8px 7px 29px -7px inset;
            background-color: rgba(195, 190, 179, 0.52);
            border: 1px solid #7a89a7;
            font-weight: 400;
            height: 355px;
            margin: 20px;
        }
        
        h2 {
            text-align: center;
            color: #2525276b;
        }
        
        .hyperLink {
            border: 4px solid #92bce6;
            background-color: #1fc8db;
            background-image: linear-gradient(141deg, #9fb8ad 0%, #1fc8db 51%, #2cb5e8 75%);
            color: white !important;
            justify-content: center;
            margin: 20px;
        }
        
        .hyperLink >h4 > a {
            color: white !important;
        }
        
        .btns {
            display: flex;
            justify-content: center;
        }
        
        @media only screen and (max-width: 600px) {
            h2 {
                font-size: x-large;
            }
        }
        
        .progress-bar-striped {
            overflow: hidden;
            height: 20px;
            margin-bottom: 20px;
            background-color: #f5f5f5;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
            -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }
        
        .progress-bar-striped > div {
            background-image: linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent);
            background-size: 40px 40px;
            float: left;
            width: 0%;
            height: 100%;
            font-size: 12px;
            line-height: 20px;
            color: #ffffff;
            text-align: center;
            -webkit-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
            -moz-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
            box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
            -webkit-transition: width 3s ease;
            -moz-transition: width 3s ease;
            -o-transition: width 3s ease;
            transition: width 3s ease;
            animation: progress-bar-stripes 2s linear infinite;
            background-color: #288ade;
        }
        
        .progress-bar-striped p {
            margin: 0;
        }
        
        @keyframes progress-bar-stripes {
            0% {
                background-position: 40px 0;
            }
            100% {
                background-position: 0 0;
            }
        }
        
        .hidden {
            display: none;
        }
    </style>

    <script>
        function progressBar() {
            document.getElementById("progressbar").classList.remove('hidden');
            var interval = setInterval(function() {
                progress()
            }, 800);
            var n = 0;

            function progress() {
                console.log("function called");
                if (n < 100) {
                    console.log(n);
                    document.querySelector(".progress-bar-striped > div").textContent = n + "%";
                    document.querySelector(".progress-bar-striped > div").style.width = n + "%";
                    n++;
                } else {
                    clearInterval(interval);
                    ddocument.getElementById("progressbar").classList.add('hidden');
                }
            }

        }
    </script>
</head>

